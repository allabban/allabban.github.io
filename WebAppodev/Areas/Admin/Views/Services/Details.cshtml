@model WebAppodev.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<style>
    .details-card {
        background-color: white;
        max-width: 600px;
        margin: 30px auto;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .detail-row {
        border-bottom: 1px solid #f0f0f0;
        padding: 15px 0;
        display: flex;
        justify-content: space-between;
    }

    .detail-label {
        font-weight: bold;
        color: #555;
    }

    .detail-value {
        color: #222;
        font-weight: 500;
        text-align: right;
    }

    .action-buttons {
        margin-top: 30px;
        display: flex;
        gap: 10px;
        justify-content: center;
    }
</style>

<div class="details-card">
    <div style="text-align:center; margin-bottom:30px;">
        <h2 style="color:#2c3e50;">Service Details</h2>
        <p class="text-muted">@Model.Name</p>
    </div>

    <div class="detail-content">
        <div class="detail-row">
            <span class="detail-label">@Html.DisplayNameFor(model => model.Name)</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Name)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">@Html.DisplayNameFor(model => model.Duration)</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Duration) Minutes</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">@Html.DisplayNameFor(model => model.Price)</span>
            <span class="detail-value text-success fw-bold">
                $@Html.DisplayFor(model => model.Price)
            </span>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning" style="width:120px;">Edit</a>
        <a asp-action="Index" class="btn btn-secondary" style="width:120px;">Back</a>
    </div>
</div>