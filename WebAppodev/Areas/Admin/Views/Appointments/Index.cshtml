@model IEnumerable<WebAppodev.Models.Appointment>

<div class="container mt-4">
    <h2>Manage Appointments</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-start border-4 @(item.Status == "Pending" ? "border-warning" : "border-success")">
                    <div class="card-body">
                        <h5 class="card-title">@item.Member.UserName</h5> <h6 class="text-muted">@item.Service.Name with @item.Trainer.FullName</h6>
                        <hr />
                        <p>
                            📅 @item.Date.ToString("g") <br />
                            ⏱️ @item.Service.Duration mins
                        </p>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge @(item.Status == "Pending" ? "bg-warning" : "bg-success")">@item.Status</span>

                            @if (item.Status == "Pending")
                            {
                                <div>
                                    <form asp-action="Approve" asp-route-id="@item.Id" style="display:inline;">
                                        <button class="btn btn-sm btn-success">✔</button>
                                    </form>
                                    <form asp-action="Cancel" asp-route-id="@item.Id" style="display:inline;">
                                        <button class="btn btn-sm btn-danger">✖</button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>