@model WebAppodev.Models.Trainer

@{
    ViewData["Title"] = "Edit Trainer";
}

<style>
    .form-card {
        background-color: white;
        max-width: 600px;
        margin: 30px auto; /* Centers the box */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 6px;
        padding: 10px;
    }

    .btn-save {
        width: 100%;
        padding: 10px;
        font-weight: bold;
    }
</style>

<div class="form-card">
    <div style="text-align:center; margin-bottom:25px;">
        <h2 style="color:#333;">Edit Trainer</h2>
        <p class="text-muted">Update the trainer's information below</p>
    </div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FullName" class="control-label fw-bold"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Specialty" class="control-label fw-bold"></label>
            <input asp-for="Specialty" class="form-control" />
            <span asp-validation-for="Specialty" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExperienceYears" class="control-label fw-bold"></label>
            <input asp-for="ExperienceYears" class="form-control" />
            <span asp-validation-for="ExperienceYears" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-top:30px;">
            <input type="submit" value="Save Changes" class="btn btn-primary btn-save" />
        </div>

        <div style="text-align:center; margin-top:15px;">
            <a asp-action="Index" class="text-decoration-none text-secondary">Cancel & Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}