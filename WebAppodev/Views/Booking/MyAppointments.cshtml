@model IEnumerable<WebAppodev.Models.Appointment>

<div class="container mt-4">
    <h2>My Appointments</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            // Check if date has passed
            bool isPast = item.Date < DateTime.Now;
            string cardClass = isPast ? "bg-light text-muted grayscale" : "border-primary";

            <div class="col-md-6 mb-3">
                <div class="card shadow-sm @cardClass">
                    <div class="card-body">
                        <h5 class="card-title">@item.Service.Name</h5>
                        <p class="card-text">
                            <strong>Date:</strong> @item.Date.ToString("g") <br />
                            <strong>Status:</strong> @item.Status
                        </p>

                        @if (item.Status == "Rejected" || item.Status == "Cancelled")
                        {
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .grayscale {
        opacity: 0.6;
        filter: grayscale(100%);
    }
</style>