@model WebAppodev.Models.UserProfile
@{
    ViewData["Title"] = "AI Body Visualizer";
}

<div class="container mt-5">
    <div class="card shadow-lg border-primary">
        <div class="card-header bg-primary text-white">
            <h3>🎨 AI Body Visualizer</h3>
        </div>
        <div class="card-body">
            <p>Upload your photo and select a goal. AI will visualize your future physique.</p>

            <form asp-action="GenerateImageOnly" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Goal" class="form-label">Target Physique</label>
                    <select asp-for="Goal" class="form-select">
                        <option value="Muscular and Ripped">Muscular & Ripped</option>
                        <option value="Lean and Toned">Lean & Toned</option>
                        <option value="Bodybuilder">Bodybuilder Mass</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUpload" class="form-label">Upload Your Photo</label>
                    <input asp-for="ImageUpload" class="form-control" type="file" accept="image/*" required />
                    <div class="form-text">For best results, use a photo with good lighting.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100">✨ Generate Image</button>
            </form>
        </div>
    </div>
</div>