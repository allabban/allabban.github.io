@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Your journey to fitness starts here.</p>
</div>

<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="card">

            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <span>
                    @if (ViewBag.HeaderTitle != null)
                    {
                        @ViewBag.HeaderTitle
                    }
                    else
                    {

                        <text>Most Popular</text>
                    }
                </span>

                <div class="btn-group btn-group-sm">
                    <a asp-action="Index" asp-route-sortOrder="Popularity" class="btn btn-light text-success border-0">
                        Top 3
                    </a>
                    <a asp-action="Index" asp-route-sortOrder="Name" class="btn btn-light text-success border-0">
                        A-Z
                    </a>
                </div>
            </div>

            <ul class="list-group list-group-flush">
                @if (ViewBag.TopTrainers != null)
                {
                    foreach (var trainer in ViewBag.TopTrainers)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @trainer.Name
                            <span class="badge bg-primary rounded-pill">@trainer.Count sessions</span>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>